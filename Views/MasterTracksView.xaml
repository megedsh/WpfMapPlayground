<UserControl x:Class="WpfMapPlayground.Views.MasterTracksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfMapPlayground.Views"
             xmlns:dgx="urn:tom-englert.de/DataGridExtensions"
             xmlns:wpfMapPlayground="clr-namespace:WpfMapPlayground"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" >
    <UserControl.Resources>
        <ControlTemplate x:Key="MultipleChoiceFilter" >
            <dgx:MultipleChoiceFilter />
        </ControlTemplate>
    </UserControl.Resources>
    <Grid>
        <TabControl>
            <TabItem Header="Timed Items">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <DataGrid ItemsSource="{Binding Source={x:Static wpfMapPlayground:DataProvider.Items}}"
                              AutoGenerateColumns="False"
                              dgx:DataGridFilter.IsAutoFilterEnabled="True"
                              dgx:DataGridFilter.StartFilteringKeyGesture="Ctrl+F"
                              SelectedItem="{Binding SelectedTimedLine, Mode=TwoWay}"
                              SelectionMode="Single"                              
                              HorizontalScrollBarVisibility="Auto"
                              CanUserAddRows="False"
                              >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Name}" />                            
                            <DataGridTextColumn Header="PointCount" Binding="{Binding PositionCount}" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="5" >
                        <Button Content="Add To Map" Command="{Binding AddToMapCommand}"
                                CommandParameter="{Binding SelectedTimedLine}" />

                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</UserControl>